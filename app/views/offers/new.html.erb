<div class="container">

  <div class="col-md-8 col-sm-12 col-md-offset-2 form-flex form-panel_wrapper">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="form-heading-title">Créer une nouvelle offre d'emploi animateur</div>
      </div>
      <div class="panel-body">
          <%= form_for @offer do |f| %>
            <div class="form-group">
              <%= f.label :date, 'Date', class: 'control-label'%>
              <%= f.text_field :date, id: 'availability-date', class: 'form-control', placeholder: 'Date', :required => true %>
            </div>
            <div class="form-group">
              <%= f.label :time_slot, 'Plage horaire', class: 'control-label'%>
              <%= f.select :time_slot, options_for_select(
                  [
                      ["Interclasse", "Interclasse"],
                      ["Centre de Loisirs", "Centre de Loisirs"],
                      ["Goûter / Etude", "Goûter / Etude"],
                      ["TAP", "TAP"]
                  ]
              ), {include_blank: false}, {class: 'form-control'} %>
            </div>
            <div class="form-group">
              <%= f.label :diploma, 'Diplôme requis', class: 'control-label'%>
              <%= f.select :diploma, options_for_select(
                  [
                      ["Aucun", "Aucun"],
                      ["Bafa", "Bafa"],
                      ["Autre", "Autre"]
                  ]
              ), {include_blank: false}, {class: 'form-control'} %>
            </div>
            <div class="form-group">
              <%= f.label :offer_number, 'Nombre de postes à pourvoir', class: 'control-label'%>
              <%= f.number_field :offer_number, class: 'form-control', placeholder: 'Nombre de postes', :required => true %>
            </div>
            <div class="form-group">
              <%= f.label :school, 'Ecole', class: 'control-label'%>
              <%= f.select :school, options_for_select(
                  [
                      ["Richomme Elem", "Richomme Elem"],
                      ["Richomme Mater", "Richomme Mater"]
                  ]
              ), {include_blank: false}, {class: 'form-control'} %>
            </div>

      </div> <!-- .panel-body -->
    </div> <!-- .panel -->
          <%= f.submit t('.submit', default: "Créer l'offre"), class: 'btn btn-edit-form' %>
      <% end %> <!-- form -->
  </div>
</div>

<script>
    $(function(){
        $('#availability-date').datepicker({
            dateFormat: 'yy-mm-dd',
            monthNames: ['Janvier','Février','Mars','Avril','Mai','Juin','Juillet','Août','Septembre','Octobre','Novembre','Décembre'],
            dayNamesMin: ['D','L','M','M','J','V','S'],
        })
    })
</script>