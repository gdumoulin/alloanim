<div class="container">

  <div class="col-md-12">

    <h2>Toutes les offres</h2>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Centre</th>
          <th>Date</th>
          <th>Créneau</th>
          <th>Diplôme requis</th>
          <th>Créé par</th>
        </tr>
      </thead>

      <tbody>
        <% @offers.each do |offer| %>
          <tr>
            <td><%= offer.school %></td>
            <td><%= offer.date %></td>
            <td><%= offer.time_slot %></td>
            <td><%= offer.diploma %></td>
            <td><%= offer.center.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>