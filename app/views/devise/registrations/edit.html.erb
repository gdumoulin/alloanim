<div class="col-md-3">
  <div>Modifier le profil</div>
  <div>Photo</div>
  <div>Documents</div>
</div>

<div class="col-md-9 col-sm-12 form-flex">
  <%= bootstrap_devise_error_messages! %>
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <div class="form-heading-title">Obligatoire</div>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="form-group required">
            <%= f.label :phone_number, class: 'control-label'%>
            <%= f.text_field :phone_number, class: 'form-control' %>
          </div>
          <div class="form-group required">
            <%= f.label :soi_number, class: 'control-label' %>
            <%= f.text_field :soi_number, class: 'form-control' %>
          </div>
          <div class="form-group required">
            <%= f.label :circonscription, class: 'control-label' %>
            <%= f.text_field :circonscription, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :school %>
            <%= f.text_field :school, class: 'form-control' %>
          </div>

    </div>
  </div>
  <%= f.submit t('.update', default: 'Update'), class: 'btn btn-edit-form' %>
  <% end %>

  <p><%= t('.unhappy', default: 'Unhappy') %>? <%= link_to t('.cancel_my_account', default: 'Cancel my account'), registration_path(resource_name), data: { confirm: t('.are_you_sure', default: "Are you sure?") }, method: :delete %>.</p>

  <%= link_to t('.back', default: 'Back'), :back %>
</div>