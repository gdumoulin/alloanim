<div class="profile-header-layout">
  <div class="container profile-header-layout_wrapper">

    <div class="profile-header-layout_side">
      <img src="http://s3.amazonaws.com/medias.photodeck.com/d4657374-3636-4e55-b014-c2abccf27e2f/20150611_PMV_AirLiquide_7913_DEF_Small_airliquide_medium.jpg">

    </div>

    <div class="profile-header-layout_main">

      <div class="profile-header-user">
        <div class="profile-header-user_name"><%= @user.first_name %> <%= @user.last_name %> (<%= @user.soi_number %>)</div>
        <div class="profile-header-user_age">28 ans</div>
        <div class="profile-header-user_phone_number">
          <i class="fa fa-mobile fa-lg"></i>
          <span><a href="tel:<%= @user.phone_number %>"><%= @user.phone_number %></a></span>
        </div>
        <div class="profile-header-user_circonscription">
          <i class="fa fa-map-marker fa-lg"></i>
          <span><%= @user.circonscription %></span>
        </div>

        <div class="profile-header-user_modify btn btn-lg btn-default">
          <%= link_to "Modifier mon profil", edit_user_registration_path(current_user) %>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="profile-layout_wrapper">
</div>