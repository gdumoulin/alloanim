
<div class="container">

  <div class="form-group form-users-search">
    <%= search_form_for @search do |f| %>
        <div><%= f.text_field :availabilities_date_cont, id: 'availability-date', class: 'form-control', placeholder: 'Date'%></div>
        <div><%= f.select :availabilities_time_slot_cont, options_for_select(
            [
                ["Interclasse", "Interclasse"],
                ["Centre de Loisirs", "Centre de Loisirs"],
                ["Goûter / Etude", "Goûter / Etude"],
                ["TAP", "TAP"]
            ]
        ), {include_blank: false}, {class: 'form-control'} %></div>
        <%= f.submit t('.submit', default: 'Chercher'), class: 'btn btn-edit-form' %>
    <% end %>
  </div>
  <% @user_availabilities.each do |user| %>
      <div class="panel panel-default user-profile"> <%= image_tag avatar_url(user), class: 'aaa-img-circle avatar-small' %>
        <strong><%= user.first_name %> <%= user.last_name %></strong>
        <div><a href="tel:<%= user.phone_number %>"><%= user.phone_number %></a></div>
        <div><%= link_to 'Voir le profil', user_path(user) %></div>
      </div>

      <!--
      <% user.availabilities.each do |availability| %>
          <%= availability.date.to_date %> <%= availability.time_slot %></br>
      <% end %>
      -->
      <br/>
  <% end %>

</div>

<script>
  $(function(){
      $('#availability-date').datepicker({
          dateFormat: 'yy-mm-dd',
          monthNames: ['Janvier','Février','Mars','Avril','Mai','Juin','Juillet','Août','Septembre','Octobre','Novembre','Décembre'],
          dayNamesMin: ['D','L','M','M','J','V','S'],
      })
  })
</script>