<div class="container">
  <%= bootstrap_devise_error_messages! %>
  <div class="col-md-6 col-sm-12 col-md-offset-3">
    <h2 class="form-title text-center">Vous avez oublié votre mot de passe?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Votre Adresse e-mail', :required => true %>
        </div>

        <div class="actions">
          <%= f.submit "Réinitialiser mon mot de passe", class: 'btn btn-registration-form'  %>
        </div>
    <% end %>

  </div>
</div>
