<div class="container">
  <div class="col-md-8 col-sm-12 col-md-offset-2 form-flex form-panel_wrapper">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="form-heading-title">Modifier mon profil</div>
        </div>
        <div class="panel-body">
          <div class="form-group required">
            <%= f.label :email, 'Email', class: 'control-label'%>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Adresse e-mail' %>
          </div>
          <div class="form-group required">
            <%= f.label :first_name, 'Prénom', class: 'control-label'%>
            <%= f.text_field :first_name, class: 'form-control', placeholder: 'Prénom' %>
          </div>
          <div class="form-group required">
            <%= f.label :last_name, 'Nom', class: 'control-label'%>
            <%= f.text_field :last_name, class: 'form-control', placeholder: 'Nom' %>
          </div>
          <div class="form-group required">
            <%= f.label :phone_number, 'Numéro de tél.', class: 'control-label'%>
            <%= f.text_field :phone_number, class: 'form-control', placeholder: 'Numéro de téléphone' %>
          </div>
          <div class="form-group required">
            <%= f.label :circonscription, 'Circonscription', class: 'control-label'%>
            <%= f.select :circonscription, options_for_select(
                [
                    ["CASPE 6 14", "CASPE 6 14"],
                    ["CAS 16 17", "CAS 16 17"],
                    ["CASPE 18", "CASPE 18"]
                ]
            ), {include_blank: false}, {class: 'form-control'} %>
          </div>
        </div>
      </div>
      <%= f.submit t('.sign_up', default: 'Modifier le profil'), class: 'btn btn-edit-form' %>
    <% end %>
  </div>
</div>
