<div class="container">
  <div class="col-md-6">
    <h2>Mes infos</h2>
    <div><strong><%= @center.first_name %> <%= @center.last_name %></strong></div>
    <div><%= @center.email %></div>
    <div><%= @center.phone_number %></div>
    <div><%= @center.circonscription %></div>
    <%= link_to 'Modifier', edit_center_registration_path(@center) %>
  </div>
  <div class="col-md-6">
    <h2>Mes écoles</h2>

    <% @center.schools.each do |school| %>
      <%= link_to school_path(school) do %>
        <div><strong><%= school.name %></strong></div>
      <% end %>
      <div><%= school.address %></div>
      <br />
    <% end %>
  </div>
  <div class="col-md-12">
    <h2>Mes offres</h2>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Centre</th>
        <th>Date</th>
        <th>Créneau</th>
        <th>Diplôme requis</th>
        <th>Actions</th>
      </tr>
      </thead>
      <% @center.offers.order("date desc").each do |offer| %>
          <tr>
            <td><%= offer.school.name %></td>
            <td><%= l offer.date.to_date, format: '%A' %> <%= l offer.date.to_date, format: :long %></td>
            <td>
              <% offer.slots.each do |slot|  %>
                  <div class="offer-content-timeslot badge tealish">
                    <i class="fa fa-clock-o fa-lg"></i> <%= slot.name %>
                  </div>
              <% end %>
            </td>
            <td>
              <% offer.diplomas.each do |diploma|  %>
                  <div class="offer-tags-diploma <%= diploma.name != "Aucun diplôme" ? "badge butterscotch" : "badge" %>">
                    <i class="fa fa-graduation-cap fa-lg"></i><%= diploma.name %>
                  </div>
              <% end %>
            </td>
            <td>
              <% if offer.filled %>
              <%= link_to 'Offre Pourvue / Remettre en ligne', offer_mark_as_filled_path(offer, filled: false), class: "btn btn-small btn-pink", method: :patch %>
              <% else %>
                  <%= link_to 'Marquer commme pourvue', offer_mark_as_filled_path(offer, filled: true), class: "btn btn-small btn-violet", method: :patch %>
              <% end %>
              <br/>
            <%= link_to 'Supprimer', offer, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>