<div class="container">
  <div class="col-md-12">
    <h2>Mes infos</h2>
    <div><%= @center.first_name %> <%= @center.last_name %></div>
    <div><%= @center.email %></div>
    <div><%= @center.circonscription %></div>
    <h2>Mes offres</h2>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Centre</th>
        <th>Date</th>
        <th>Créneau</th>
        <th>Diplôme requis</th>
      </tr>
      </thead>
      <% @center.offers.each do |offer| %>
          <tr>
            <td>Richomme Elem</td>
            <td><%= offer.date %></td>
            <td><%= offer.time_slot %></td>
            <td><%= offer.diploma %></td>
            <td><%= link_to 'Modifier', edit_offer_path(offer) %> <%= link_to 'Supprimer', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>