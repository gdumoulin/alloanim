<div class="container">
  <%= bootstrap_devise_error_messages! %>
  <div class="col-md-6 col-sm-12 col-md-offset-3">

  <h2 class="form-title text-center">Renvoyer un email pour confirmer le compte</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>

    <div class="actions">
      <%= f.submit "Renvoyer un mail", class: 'btn btn-registration-form'  %>
    </div>
  <% end %>

  </div>
</div>
