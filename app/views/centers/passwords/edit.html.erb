<div class="container">
  <%= bootstrap_devise_error_messages! %>
  <div class="col-md-6 col-sm-12 col-md-offset-3">

    <h2 class="form-title text-center">Choisir un nouveau mot de passe</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <% if @minimum_password_length %>
              <em>(minimum <%= @minimum_password_length %> caract√®res )</em><br /><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: 'Nouveau mot de passe', :required => true %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirmer le mot de passe', :required => true  %>
        </div>

        <div class="actions">
          <%= f.submit "Modifier mon mot de passe", class: 'btn btn-registration-form' %>
        </div>
    <% end %>

  </div>
</div>
